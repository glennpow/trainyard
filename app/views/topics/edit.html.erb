<% title t(:edit_object, :object => t(:topic, :scope => [ :content ])) %>

<%= render_heading(t(:edit_object, :object => t(:topic, :scope => [ :content ]))) %>

<% form_for :topic, :url => object_path, :html => { :method => :put } do |f| %>
  <%= f.text_field :name, :required => true %>
    
  <% if @topic.guru_points > 0 %>
    <%= render_field(tp(:guru_point, :scope => [ :content ]), @topic.guru_points) %>
  <% end %>

  <%= f.submit t(:save) %>
<% end %>
