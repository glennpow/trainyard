<% title t(:create_object, :object => t(:topic, :scope => [ :content ])) %>

<% form_for :topic, :url => objects_path do |f| %>
  <%= f.text_field :name, :required => true %>
  
  <% if @topic.guru_points > 0 %>
    <%= render_field(tp(:guru_point, :scope => [ :content ]), @topic.guru_points) %>
  <% end %>
  
  <% fields_for :post do |post_f| %>
    <%= render :partial => 'posts/edit', :locals => { :f => post_f, :post => @post } %>
  <% end %>

  <%= f.submit_with_cancel(:submit => t(:create)) %>
<% end %>

