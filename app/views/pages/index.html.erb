<% title tp(:page, :scope => [ :content ]) %>

<% if @group %>
  <%= render_heading(t(:object_for_parent, :object => tp(:page, :scope => [ :content ]), :count => @indexer.collection.total_entries, :parent => @group.name)) %>
<% else %>
  <%= render_heading(tp(:page, :scope => [ :content ])) %>
<% end %>

<% if has_administrator_role? %>
  <% @indexer.footers = link_to(t(:create_object, :object => t(:page, :scope => [ :content ])), new_page_path) %>
<% end %>

<%= render_indexer(@indexer) %>
