<%= render_row(
  indexer,
  page,
  [
    link_to_resource(page),
    h(page.permalink),
    link_to_resource(page.group),
  ],
  :actions => is_editor_of?(page) ? [
    icon_link_to(:edit, t(:edit), edit_page_path(page)),
    icon_link_to(:delete, t(:delete), page, :confirm => t(:are_you_sure), :method => :delete)
  ] : nil) %>