<% title t(:invite_to_group, :scope => [ :authentication, :invites, :new ], :group => @group.name) %>

<%= render_heading(t(:invite_to_group, :scope => [ :authentication, :invites, :new ], :group => @group.name)) %>

<% form_for(:invite, :url => objects_path) do |f| %>
