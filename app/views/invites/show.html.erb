<% title t(:invite, :scope => [ :authentication ]) %>

<%= render_field(t(:group), link_to_resource(invite.group)) %>

<%= render_field(t(:inviter, :scope => [ :authentication ]), link_to_resource(invite.inviter)) %>

<%= render_field(t(:email, :scope => [ :contacts ]), h(invite.email)) %>

<%= render_field(t(:sent, :scope => [ :content ]), invite.created_at) %>
