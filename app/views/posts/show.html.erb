<% title t(:post, :scope => [ :content ]) %>

<%= render_heading(link_to(h(@post.topic_name), topic_path(@post.topic))) %>

<%= post_breadcrumbs(@post) %>

<%= render_field(t(:author, :scope => [ :content ]), link_to_user(@post.user)) %>

<% if @post.guru_points > 0 %>
  <%= render_field(tp(:guru_point, :scope => [ :content ]), @post.guru_points) %>
<% end %>

<%= render_formatted(@post.body, :class => 'paragraph') %>
