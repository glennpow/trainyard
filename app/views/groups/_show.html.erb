<%= render_heading(h(group.name),
  :actions => [ { :if => has_administrator_role?, :allow => icon_link_to(:edit, t(:edit), edit_group_path(group)) } ]) %>

<%= render_field(t(:moderator, :scope => [ :authentication ]), link_to_user(group.moderator)) %>

<% if group.parent_group %>
  <%= render_field(t(:parent_group, :scope => [ :authentication ]), link_to_resource(group.parent_group)) %>
<% end %>

<% if group.child_groups.any? %>
  <%= render_field(tp(:child_group, :scope => [ :authentication ]), group.child_groups.map(&:name)) %>
<% end %>

<%= render_field(tp(:member, :scope => [ :authentication ]), group.users.length,
  :actions => [ { :if => group.users.any?, :allow => link_to(t(:view), group_users_path(group)) } ]) %>
