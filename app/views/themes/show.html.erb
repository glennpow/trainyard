<% title "#{t(:theme, :scope => [ :themes ])}: #{@theme.name}" %>

<%= render_heading(t(:preview, :scope => [ :themes ])) %>

<p align="center"><iframe src="<%= preview_themes_path(:theme_id => @theme.id) %>" width="800" height="600" style="margin-left: auto; margin-right: auto"></iframe></p>

<% if has_administrator_role? %>
  <% unless current_theme.id == @theme.id %>
    <% page_actions << icon_link_to(:apply, t(:apply, :scope => [ :themes ]), apply_theme_path(@theme), :method => :post) %>
  <% end %>
<% elsif is_editor_of?(@themeable) %>
  <% unless @themeable.theme_id == @theme.id %>
    <% page_actions << icon_link_to(:apply, t(:apply, :scope => [ :themes ]), apply_theme_path(@theme, :themeable_type => @themeable.class.to_s, :themeable_id => @themeable.id), :method => :post) %>
  <% end %>
<% end %>

<% if is_editor_of?(@theme) %>
  <% page_actions << icon_link_to(:edit, t(:edit), edit_theme_path(@theme)) %>
<% end %>
