<%= render_row(
  indexer,
  article,
  [
    link_to_resource(article),
    link_to_resource(article.user),
    link_to_resource(article.resource, :label => "#{h(article.resource.name)} (#{article.resource.class.to_s})"),
    article.updated_at.to_s(:long),
    h(article.locale_name),
  ],
  :actions => [
    { :if => is_editor_of?(article), :allow => [
      icon_link_to(:edit, t(:edit), edit_object_path(article)),
      icon_link_to(:delete, t(:delete), article, :confirm => t(:are_you_sure), :method => :delete)
    ] } ]) %>
