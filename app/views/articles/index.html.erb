<% if @resource %>
  <% title t(:articles_for_object, :scope => [ :content ], :count => @indexer.collection.total_entries, :object => @resource.name) %>
<% else %>
  <% title tp(:article, :scope => [ :content ]) %>
<% end %>

<%= render_indexer(@indexer) %>

<% if is_editor_of?(@resource) %>
  <% page_action icon_link_to(:add_large, t(:create_object, :object => t(:article, :scope => [ :content ])), new_object_path) %>
<% end %>
