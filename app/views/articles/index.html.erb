<% title tp(:article, :scope => [ :content ]) %>

<% if @groupable %>
  <%= render_heading(t(:articles_for_object, :scope => [ :content ], :object => @groupable.name)) %>
<% else %>
  <%= render_heading(tp(:article, :scope => [ :content ])) %>
<% end %>

<% if @groupable && is_editor_of?(@groupable) %>
  <%= render_actions([
    { :allow => icon_link_to(:add_large, t(:create_object, :object => t(:article, :scope => [ :content ])), new_object_path) }
    ] ) %>

  <% @indexer.footers = link_to(t(:create_object, :object => t(:article, :scope => [ :content ])), new_object_path) %>
<% end %>

<%= render_indexer(@indexer) %>

<%= render_page_actions([ { :allow => link_to_back } ]) %>
