<% title tp(:article, :scope => [ :content ]) %>

<% if @resource %>
  <%= render_heading(t(:articles_for_object, :scope => [ :content ], :count => @indexer.collection.total_entries, :object => @resource.name)) %>
<% else %>
  <%= render_heading(tp(:article, :scope => [ :content ])) %>
<% end %>

<% if is_editor_of?(@resource) %>
  <%= render_actions([ icon_link_to(:add_large, t(:create_object, :object => t(:article, :scope => [ :content ])), new_object_path) ]) %>

  <% @indexer.footers = link_to(t(:create_object, :object => t(:article, :scope => [ :content ])), new_object_path) %>
<% end %>

<%= render_indexer(@indexer) %>
