<div class="review listed">
  <table class="listed-table full-width">
    <tr>
      <td class="align-top listed-descriptor">
        <%= image_link_to_user(review.user, :image_style => :thumb) %>
        <p class="listed-info"><%= link_to_user(review.user) %></p>
        <p class="listed-info"><%= review.created_at.to_s(:short) %></p>
      </td>
  
      <td class="align-top align-left">
        <%= render_rating(review) %>

        <%= render_formatted(review.body, :truncate => 100) %>

        <% if is_editor_of?(review) %>
          <%= render_actions([ icon_link_to(:edit, t(:edit), edit_review_path(review)) ]) %>
        <% end %>
      </td>
    </tr>
  </table>
</div>