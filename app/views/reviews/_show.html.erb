<%= render_heading(t(:reviews_of_object, :scope => [ :content ], :count => 1, :object => link_to_resource(review.resource))) %>

<table class="profile-table">
  <tr>
    <td>
      <%= render_user_card(review.user, :image_style => :normal) %>
    </td>
    <td>
      <%= render_field(t(:rating, :scope => [ :content ]), render_rating(review)) %>

      <%= render_field(t(:date, :scope => [ :datetimes ]), review.created_at) %>
    </td>
  </tr>
</table>

<%= render_text_area(review.body) %>