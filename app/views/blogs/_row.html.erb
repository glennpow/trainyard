<%= render_row([
  h(blog.name),
  link_to_show(blog.group.name, blog.group),
  h(blog.created_at),
  ],
  :actions => [
    { :allow => [
      icon_link_to(:show, t(:show), blog)
    ] },
    { :if => is_editor_of?(blog), :allow => [
      icon_link_to(:edit, t(:edit), edit_object_path(blog)),
      icon_link_to(:delete, t(:delete), blog, :confirm => t(:are_you_sure), :method => :delete)
    ] } ]) %>
