<% if @group %>
  <% title t(:object_for_parent, :object => tp(:blog, :scope => [ :content ]), :count => @indexer.collection.total_entries, :parent => @group.name) %>
<% else %>
  <% title tp(:blog, :scope => [ :content ]) %>
<% end %>

<% if is_editor_of?(@group) %>
  <% page_actions << icon_link_to(:add_large, t(:add_object, :object => t(:blog, :scope => [ :content ])), new_object_path) %>
<% end %>

<%= render_indexer(@indexer) %>
