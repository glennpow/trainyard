  <% title t(:watching, :scope => [ :content ]) %>
<% elsif @resource %>
  <% title t(:users_watching_object, :scope => [ :content ], :count => @indexer.collection.total_entries, :object => @resource.name) %>
<% else %>
  <% title tp(:watching, :scope => [ :content ]) %>
<% end %>

<%= render_indexer(@indexer) %>
