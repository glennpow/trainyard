<%= render_row(
  indexer,
  watching,
  [
    @user ? link_to_resource(watching.resource) : link_to_resource(watching.user),
    watching.created_at.to_s(:long),
  ],
  :url => nil,
  :actions => [
    watching.user_id == current_user.id ? icon_link_to(:delete, t(:unwatch, :scope => [ :content ]), watching, :confirm => t(:are_you_sure), :method => :delete) : nil
  ]) %>
