<% title t(:revision, :scope => [ :content ]) %>

<%= render_heading(t(:revisions_for_object, :scope => [ :content ], :count => 1, :object => link_to_resource(@article_revision.article))) %>

<%= render_field(content_tag(:span, @article_revision.created_at.to_s(:long), :class => 'timestamp')) %>

<%= render_field(tp(:author, :scope => [ :content ]), @article_revision.author.map { |user| user.name }.to_sentence) %>

<%= render_field(t(:revision, :scope => [ :content ]), @article_revision.revision) %>

<%= render_article(@article_revision) %>

