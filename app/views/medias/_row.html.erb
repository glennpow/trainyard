<%= render_row([
  h(media.name),
    link_to_resource(media.resource),
    h(media.created_at),
  ],
  :actions => is_editor_of?(media) ? [
    icon_link_to(:edit, t(:edit), edit_object_path(media)),
    icon_link_to(:delete, t(:delete), media, :confirm => t(:are_you_sure), :method => :delete)
  ] : nil) %>
