<% title tp(:role, :scope => [ :authentication ]) %>

<%= render_heading(t(:roles_for_user, :scope => [ :authentication, :roles, :index ], :user => @user.login.upcase)) %>

<%= render_field(t(:roles_assigned, :scope => [ :authentication, :roles, :index ]), nil) %>
<ul class="show-field-list">
  <%= render :partial => 'item', :collection => @user.roles, :as => :role, :locals => { :user => @user } %> 
</ul>

<%= render_field(t(:roles_available, :scope => [ :authentication, :roles, :index ]), nil) %>
<ul class="show-field-list">
  <%= render :partial => 'item', :collection => (@all_roles - @user.roles), :as => :role, :locals => { :user => @user } %> 
</ul>
