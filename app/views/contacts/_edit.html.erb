<% unless defined? hide_personal %>
<table class="form-table">
  <tr>
    <td>
  <%= f.text_field :first_name %>
    </td>
    <td>
  <%= f.text_field :middle_name %>
    </td>
    <td>
  <%= f.text_field :last_name %>
    </td>
  <tr>
</table>
<table class="form-table">
  </tr>
    <td>
  <%= enumeration_select(f, :prefix, { :include_blank => true }) %>
    </td>
    <td>
  <%= enumeration_select(f, :suffix, { :include_blank => true }) %>
    </td>
    <td>
  <%= enumeration_select(f, :gender, { :include_blank => true }) %>
    </td>
    <td colspan="2">
  <%= f.date_select :birthdate, :start_year => 1900, :order => [ :day, :month, :year ], :include_blank => true %>
    </td>
  </tr>
</table>
<% end %>

<% unless defined? hide_address %>
  <%= f.form_for(:address, :header => t(:address, :scope => [ :contacts ])) %>
<% end %>

<% unless defined? hide_extras %>
  <%= f.form_for(:emails, :header => tp(:email, :scope => [ :contacts ])) %>

  <%= f.form_for(:phones, :header => tp(:phone, :scope => [ :contacts ])) %>

  <%= f.form_for(:urls, :header => tp(:url, :scope => [ :contacts ])) %>
<% end %>