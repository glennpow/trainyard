<% unless defined? hide_personal %>
  <% unless contact.first_name.blank? %>
    <%= render_field(t(:first_name, :scope => [ :contacts ]), h(contact.first_name)) %>
  <% end %>
  
  <% unless contact.middle_name.blank? %>
    <%= render_field(t(:middle_name, :scope => [ :contacts ]), h(contact.middle_name)) %>
  <% end %>
  
  <% unless contact.last_name.blank? %>
    <%= render_field(t(:last_name, :scope => [ :contacts ]), h(contact.last_name)) %>
  <% end %>
  
  <% if contact.prefix %>
    <%= render_field(t(:prefix, :scope => [ :contacts ]), e(contact.prefix)) %>
  <% end %>
  
  <% if contact.suffix %>
    <%= render_field(t(:suffix, :scope => [ :contacts ]), e(contact.suffix)) %>
  <% end %>
  
  <% if contact.gender %>
    <%= render_field(t(:gender, :scope => [ :contacts ]), e(contact.gender)) %>
  <% end %>
  
  <% if contact.birthdate %>
    <%= render_field(t(:birthdate, :scope => [ :contacts ]), h(contact.birthdate)) %>
  <% end %>
<% end %>

<% unless defined? hide_address || contact.address.blank? %>
  <%= render_heading(t(:address, :scope => [ :contacts ])) %>

  <%= render :partial => 'addresses/show', :locals => { :address => contact.address } %>
<% end %>

<% if contact.emails.any? %>
  <%= render_heading(tp(:email, :scope => [ :contacts ])) %>

  <%= render :partial => 'emails/show', :collection => contact.emails, :as => :email %>
<% end %>

<% if contact.phones.any? %>
  <%= render_heading(tp(:phone, :scope => [ :contacts ])) %>

  <%= render :partial => 'phones/show', :collection => contact.phones, :as => :phone %>
<% end %>

<% if contact.urls.any? %>
  <%= render_heading(tp(:url, :scope => [ :contacts ])) %>

  <%= render :partial => 'urls/show', :collection => contact.urls, :as => :url %>
<% end %>
