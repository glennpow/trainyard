<% if @group %>
  <% title t(:users_in_object, :scope => [ :authentication ], :object => h(@group.name)) %>
<% else %>
  <% title tp(:user, :scope => [ :authentication ]) %>
<% end %>

<%= render_indexer(@indexer) %>

<% if @group && is_moderator_of?(@group) %>
  <% page_actions << icon_link_to(:add_large, t(:invite_to_group, :scope => [ :authentication, :invites, :new ], :group => @group.name), new_group_invite_path(@group)) %>
<% end %>
