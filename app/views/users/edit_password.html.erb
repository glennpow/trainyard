<% title t(:edit_object, :object => t(:password, :scope => [ :authenticate ])) %>

<% form_tag url_for(:action => "update_password") do %>
  <% labeled_field(:old_password, :required => true) do %>
    <%= password_field_tag 'old_password', @old_password, :size => 40 %>
  <% end %>

  <%= show_field(nil, content_tag(:span, t(:constraints, :scope => [ :authenticate, :passwords, :edit ]), :class => 'small')) %>

  <% labeled_field(:new_password, :required => true) do %>
    <%= password_field_tag 'password', {}, :size => 40 %>
  <% end %>

  <% labeled_field(:confirm_password, :required => true) do %>
    <%= password_field_tag 'password_confirmation', {}, :size => 40 %>
  <% end %>
 
  <%= render_submit(t(:save)) %>
<% end %>

<%= render_page_actions([ { :allow => link_to_back } ]) %>
