<% title t(:reset_password, :scope => [ :authentication ]) %>

<% form_tag url_for(:action => "update_reset_password", :id => params[:id]) do %>
  <% labeled_field(:password, :required => true, :hint => t(:constraints, :scope => [ :authentication, :passwords, :edit ])) do %>
    <%= password_field_tag :password %>
  <% end %>
  
  <% labeled_field(:password_confirmation, :label => { :name => t(:confirm_password, :scope => [ :authentication ]) }, :required => true) do %>
    <%= password_field_tag :password_confirmation %>
  <% end %>
  
  <%= render_submit_with_cancel(:submit => t(:save)) %>
<% end %>
