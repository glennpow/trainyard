<% title t(:forgot_password, :scope => [ :authentication ]) %>

<% form_tag url_for(:action => "request_reset_password", :id => params[:id]) do %>
  <% labeled_field(:email, :label => { :name => t(:confirm_email, :scope => [ :authentication, :passwords, :forgot ]) }, :required => true) do %>
    <%= text_field_tag :email %>
  <% end %>
  
  <%= render_submit_with_cancel(:submit => t(:reset_password, :scope => [ :authentication ])) %>
<% end %>
