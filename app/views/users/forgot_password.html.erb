<% title t(:forgot_password, :scope => [ :authenticate ]) %>

<% form_tag url_for(:action => "request_reset_password", :id => params[:id]) do %>
  <% labeled_field(:email, :label => { :name => t(:confirm_email, :scope => [ :authenticate, :passwords, :forgot ]) }, :required => true) do %>
    <%= text_field_tag :email %>
  <% end %>
  
  <%= render_submit(t(:reset_password, :scope => [ :authenticate ])) %>
<% end %>

<%= render_page_actions([ { :allow => link_to_back } ]) %>
