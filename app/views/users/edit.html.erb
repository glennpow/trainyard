<% title t(:edit_object, :object => t(:account, :scope => [ :authentication ])) %>

<% form_for :user, :url => user_url(@user), :html => { :method => :put, :multipart => true } do |f| -%>
  <%= render :partial => 'edit', :locals => { :f => f, :user => @user } %>

  <%= f.submit_with_cancel(:submit => t(:save)) %>
<% end -%>

<% page_action link_to(t(:show_object, :object => t(:profile, :scope => [ :authentication ])), user_path(@user)) %>
<% page_action link_to(t(:change_password, :scope => [ :authentication ]), change_password_path) %>
