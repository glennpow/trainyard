<% title t(:comments_for_object, :scope => [ :content ], :count => 1, :object => @comment.resource.name) %>

<% form_for :comment, :url => objects_path do |f| %>
  <%= render :partial => 'edit', :locals => { :f => f, :comment => @comment } %>

  <%= f.submit_with_cancel(:submit => t(:create)) %>
<% end %>
