<% if @resource %>
  <% title t(:comments_for_object, :scope => [ :content ], :count => @indexer.collection.total_entries, :object => link_to_resource(@resource)) %>
<% else %>
  <% title tp(:comment, :scope => [ :content ]) %>
<% end %>

<%= render_indexer(@indexer) %>

<% if may_comment?(@resource) %>
  <% page_action icon_link_to(:add_large, t(:create_object, :object => t(:comment, :scope => [ :content ])), new_object_path) %>
<% end %>
