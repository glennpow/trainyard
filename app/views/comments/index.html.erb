<% title tp(:comment, :scope => [ :content ]) %>

<%= render_heading(@commentable.nil? ? tp(:comment, :scope => [ :content ]) :
  t(:comment_for_object, :scope => [ :content ], :count => @indexer.collection.total_entries, :object => link_to_show(@commentable.name, parent_path))) %>

<% if may_review?(@commentable) %>
  <% @indexer.footers = link_to(t(:create_object, :object => t(:comment, :scope => [ :content ])), new_object_path) %>
<% end %>

<%= render_indexer(@indexer) %>

<%= render_page_actions([ { :allow => link_to_back } ]) %>
