<% if comment.user %>
  <%= f.hidden_field(:user_id) %>
  <%= render_field t(:author, :scope => [ :content ]), comment.user.name %>
<% else %>
  <%= f.text_field :user_name, :label => { :name => t(:author, :scope => [ :content ]) }, :required => true %>
<% end %>

<%= f.text_area :body, :required => true, :preview => true, :hint => link_to_text_style_hint %>
